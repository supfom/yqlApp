<!doctype html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<title>底部导航</title>
		<link rel="stylesheet" type="text/css" href="./css/api.css"/>
		<link rel="stylesheet" type="text/css" href="./css/style.css"/>
		<style>
			header {
				background-color: #6ED6D7;
				border: none;
			}
			header ul li {
				height: 50px;
				margin-top:-24px;
				line-height: 50px;
				text-align: center;
				display: none;
				color: #B3B3B3;
				position: relative;
				font-size: 18px;
			}
			header ul li.active {
				display: block;
			}
			/* 头部样式 */
			.topbar {
				background: #6ED6D7;
				height: 50px;
			}
			.topbar_title {
				display: inline-block;
				font-size: 20px;
				line-height: 50px;
				padding-left: 12px;
			}
			.hr01, .hr02 {
				height: 28px;
			}
			.headerico {
				padding: 11px 15px 11px 15px;
			}
			.headericohover {
				background: #6ED6D7;
			}
			.fr {
				float: right;
			}
			.fl {
				float: left;
			}
			/*第一头部*/
			#logo {
				padding: 11px 0 0 10px;
				height: 28px;
			}
			#citylist {
				height: 50px;
				line-height: 50px;
				padding-left: 4px;
				font-size: 18px;
				color: #FFFFFF;
			}
			.logo {
				vertical-align: top;
				width: 80px;
				padding-top: 15px;
			}
			.search {
				height: 34px;
				line-height: 34px;
				padding-left: 10px;
				border-radius: 30px;
				margin-top: 8px;
				position: absolute;
				left: 20px;
				right: 60px;
				font-size: 14px;
			}
			.search img {
				vertical-align: top;
				width: 20px;
				padding-top: 7px;
				padding-right: 10px;
			}
			.firstSearch {
				left: 90px;
				right: 60px;
				background-color: #FFFFFF;
				color: #999;
			}
			.firstSearch input {
				width: 100%;
				border-radius: 10px;
				outline: none;
				color: #404040;
				text-indent: 4px;
			}
			.shopList img {
				vertical-align: top;
				width: 30px;
				padding-left: 30px;
			}
			.firstSearch .sear_img {
				float: right;
				margin-top: -32px;
			}
			.firstSearch input:focus {
				outline: none;
			}
			#footer {
				background-color: #3F3F3F;
				color: #B3B3B3;
			}
			#footer ul li {
				padding-top: 36px;
				padding-bottom: 4px;
				background: url() no-repeat center 2px;
				background-size: auto 30px;
				text-align: center;
			}
			#footer ul li.active {
				color: #6ED6D7;
			}
			#footer ul li:nth-child(1) {
				background-image: url(./image/goodsList.png);
			}
			#footer ul li:nth-child(2) {
				background-image: url(./image/cart.png);
			}
			#footer ul li:nth-child(3) {
				background-image: url(./image/about.png);
			}
			#footer ul li:nth-child(4) {
				background-image: url(./image/admin.png);
			}
			#footer ul li:nth-child(1).active {
				background-image: url(./image/goodsList01.png);
			}
			#footer ul li:nth-child(2).active {
				background-image: url(./image/cart01.png);
			}
			#footer ul li:nth-child(3).active {
				background-image: url(./image/about01.png);
			}
			#footer ul li:nth-child(4).active {
				background-image: url(./image/admin01.png);
			}
		</style>
	</head>
	<body>
		<div id="wrap" class="flex-wrap flex-vertical">
			<header>
				<ul>
					<li class="border-b active">
						<div class="topbar">
							<div class="citylist fl" id="citylist"><img src="./image/logo.png" alt="" class="logo">
							</div>
							<div class="search firstSearch">
								<input type="text" id="search" name="search" >
								<img class="sear_img" src="./image/search.png">
							</div>
							<div class="fr headerico hr01 shopList"  tapmode="" onclick="openshopList();">
								<img src="./image/shopList.png" alt="">
							</div>
						</div>
					</li>
					<li class="border-b" >
						购物车
					</li>
					<li class="border-b" >
						毅德购
					</li>
					<li class="border-b" >
						用户中心
					</li>
				</ul>
			</header>
			<div id="main" class="flex-con"></div>
			<div id="footer" class="border-t">
				<ul class="flex-wrap" >
					<li tapmode="hover" onclick="randomSwitchBtn( this );" class="flex-con active" >
						商品分类
					</li>
					<li tapmode="hover" onclick="randomSwitchBtn( this );" class="flex-con" >
						购物车
					</li>
					<li tapmode="hover" onclick="randomSwitchBtn( this );" class="flex-con" >
						毅德购
					</li>
					<li tapmode="hover" onclick="randomSwitchBtn( this );" class="flex-con" >
						用户中心
					</li>
				</ul>
			</div>
		</div>
	</body>
</html>
<script type="text/javascript" src="script/api.js"></script>
<script type="text/javascript">
	apiready = function() {
		$api.fixStatusBar($api.dom('header'));
		api.setStatusBarStyle({
			style : 'dark',
			color : '#6ab494'
		});
		funIniGroup();
	}
	function funIniGroup() {
		var eHeaderLis = $api.domAll('header li'), frames = [];
		for (var i = 0, len = eHeaderLis.length; i < len; i++) {
			frames.push({
				name : 'frame' + i,
				url : './html/frame' + i + '.html',
				bgColor : 'rgba(0,0,0,.2)',
				bounces : true
			})
		}
		api.openFrameGroup({
			name : 'group',
			scrollEnabled : false,
			rect : {
				x : 0,
				y : $api.dom('header').offsetHeight,
				w : api.winWidth,
				h : $api.dom('#main').offsetHeight
			},
			index : 0,
			frames : frames
		}, function(ret, err) {
		});
	}

	// 随意切换按钮
	function randomSwitchBtn(tag) {
		if (tag == $api.dom('#footer li.active'))
			return;
		var eFootLis = $api.domAll('#footer li'), eHeaderLis = $api.domAll('header li'), index = 0;
		for (var i = 0, len = eFootLis.length; i < len; i++) {
			if (tag == eFootLis[i]) {
				index = i;
			} else {
				$api.removeCls(eFootLis[i], 'active');
				$api.removeCls(eHeaderLis[i], 'active');
			}
		}
		$api.addCls(eFootLis[index], 'active');
		$api.addCls(eHeaderLis[index], 'active');
		api.setFrameGroupIndex({
			name : 'group',
			index : index
		});
	}

	function openshopList() {
		api.openWin({
			name : 'shopList_window',
			url : './html/shopList_window.html'
		});
	}
</script>