		.card_hover {background: #0f0;}	 
		/* 图片轮播样式 */	
		/*slide*/	
        .swipe {	
            overflow: hidden;	
            position: relative;	
        }	
	
        .swipe-wrap {	
            overflow: hidden;	
            position: relative;	
        }	
	
        .swipe-wrap > div {	
            float: left;	
            width: 100%;	
            position: relative;	
        }	
	
        .swipe-wrap > div {	
            overflow: hidden;	
            position: relative;	
        }	
	
        .swipe-wrap img {	
            width: 100%;	
            height: auto;	
            max-height: 240px;	
            min-height: 132px;	
            min-width: 320px;	
            max-width: 640px;	
        }	
	
        #slide {	
            margin: 0 auto;	
            position: relative;	
        }	
	
        #pointer {	
            position: absolute;	
            bottom: 12px;	
            overflow: hidden;	
            width: 100%;	
            text-align: center;	
        }	
	
        #pointer a {	
            display: inline-block;	
            width: 6px;	
            height: 6px;	
            border-radius: 6px;	
            margin-right: 4px;	
            background-color: #FFFFFF;	
        }	
	
        #pointer a.active {	
            background-color: #FFBD0A;	
        }	
	
        /*slide*/	
	</style>	
