/* shopSelect_rame */
.divider ul{
	width: 100%;
    margin: 0 auto;
    top: 0px;
    line-height: 36px;
    z-index: 10;
    background: #FFFFFF;
    color:#969696;
    position: fixed;
    border-bottom: #d3d2d2 solid 1px;
}
.divider ul li:last-child{
border-right: none;
}
.divider ul  li{
	width: 24.7%;
    float: left;
    text-align: center;
    border-right: #d3d2d2 solid 1px;
}

.divider ul  li .icon{
	background: url() no-repeat center 3px;
    background-size: auto 15px;
    text-align: center;
    width: 16px;
    margin-right: 20px;
    margin-top: 7px;
    height: 16px;
    background-image: url(../image/xia.png);
    float: right;
}
.cr{
	color:#6ED6D7;	
}
.divider ul  li .active{
    background-image: url(../image/xia01.png);
}
