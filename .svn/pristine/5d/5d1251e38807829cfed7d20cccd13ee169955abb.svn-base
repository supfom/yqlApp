<!doctype html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>window</title>
		<link rel="stylesheet" type="text/css" href="../css/api.css" />
		<link rel="stylesheet" type="text/css" href="../css/style.css" />
		<style>
		
		html, body {
				width: 100%;
				min-height: 100%;
				background: #e5e5e5;
			}
			/* 头部样式 */
			.topbar {
				background: #6ED6D7;
				height: 50px;
				border-bottom: 1px solid #DDDFE3;
			}
			.topbar_title {
				display: inline-block;
				font-size: 20px;
				line-height: 50px;
				padding-left: 12px;
			}
			.hr01, .hr02 {
				height: 28px;
			}
			.headerico {
				padding: 11px 15px 11px 15px;
			}
			.headericohover {
				background: #6ED6D7;
			}
			.fr {
				float: right;
			}
			.fl {
				float: left;
			}
			/*第一头部*/
			#logo {
				padding: 11px 0 0 10px;
				height: 28px;
			}
			#citylist {
				height: 50px;
				line-height: 50px;
				padding-left: 15px;
				font-size: 18px;
				color: #FFFFFF;
			}
			.back {
				vertical-align: top;
				width: 20px;
				padding-top: 15px;
			}
			.search {
				height: 34px;
				line-height: 34px;
				padding-left: 10px;
				border-radius: 30px;
				margin-top: 8px;
				position: absolute;
				left: 20px;
				right: 60px;
				font-size: 14px;
			}
			.search img {
				vertical-align: top;
				width: 20px;
				padding-top: 7px;
				padding-right: 10px;
			}
			.firstSearch {
				left: 80px;
				right: 60px;
				text-align:center;
				color: #999;
			}
			.firstSearch input {
				width: 100%;
				border-radius: 10px;
				outline: none;
				color: #404040;
				text-indent: 4px;
			}
			.firstSearch .sear_img {
				float: right;
				margin-top: -32px;
			}
			.firstSearch input:focus {
				outline: none;
			}
			/* 头部切换样式 */
			.titlebar {
				display: none;
			}
			.activebar {
				display: block;
			}
			/* 本地刷新图标 */
			#localrefresh {
				display: none;
				float: right;
				width: 40px;
				padding: 5px 10px;
			}
			
		</style>
	</head>
	<body>
		<div id="wrap">
			<!-- 第一头部 -->
			<div id="firstHeader" class="titlebar activebar">
				<div class="topbar">
					<div class="citylist fl" id="citylist" tapmode onclick="api.closeWin();"><img src="../image/back.png" alt="" class="back">返回
					</div>
					<div class="search firstSearch">
						<span style="font-size: 20px;color: #FFFFFF;">物流详情</span>
					</div>
					<img src="../image/backIndex.png" alt="" class="fr headerico hr01"  tapmode="" onclick="openIndex()">
				</div>
			</div>
			<div id="main"></div>
		</div>
	</body>
	<script type="text/javascript" src="../script/api.js"></script>
	<script type="text/javascript">
		var firstHeader = $api.byId('firstHeader');
		var firstHeaderOffset;
		var main = $api.byId('main');
		var mainPos = $api.offset(main);
		// 完成首页初始化
		apiready = function() {
			// 设置ios7的标题栏字体变亮，全局用一个就行了
			api.setStatusBarStyle({
				style : 'dark'
			});
			firstHeader = $api.byId('firstHeader');
			$api.fixIos7Bar(firstHeader);
			firstHeaderOffset = $api.offset(firstHeader);
			var main = $api.byId('main');
			var mainPos = $api.offset(main);
			api.openFrame({
				name : 'logistics_frame',
				url : './logistics_frame.html',
				rect : {
					x : 0,
					y : firstHeaderOffset.h,
					w : 'auto',
					h : api.frameHeight - firstHeaderOffset.h
				},
				bounces : true,
				opaque : false,
				vScrollBarEnabled : false,
				hScrollBarEnabled : false
			});
		};
		function openIndex() {
			api.openWin({
				name : 'index',
				url : '../index.html'
			});
		}
	</script>
</html>
